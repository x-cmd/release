
fun_update_version_release(){
    local version_tag="$1"
    [ -n "$version_tag" ] || N=x M="Please provide version tag" log:ret:1

    x gitb sync git@github.com:x-cmd/x-cmd git@gitee.com:x-cmd/x-cmd git@codeberg.org:x-cmd/x-cmd

    x gh repo release create --prerelease -r x-cmd/x-cmd --tag "$version_tag"
    x cb repo release create --prerelease -r x-cmd/x-cmd --tag "$version_tag"
    x gt repo release create --prerelease -r x-cmd/x-cmd --tag "$version_tag" --target_commitish "$version_tag" --body "$version_tag"

    x version release sync all "$version_tag"
}

fun_update_version_release "$INPUTS_VERSION_TAG"
